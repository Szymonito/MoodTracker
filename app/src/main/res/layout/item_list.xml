<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mood_schemes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#7C1095"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mood_item_feel"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Domyslna wartosc uczuca"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/mood_item_type"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Domyslna wartosc"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mood_item_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":-D"
            android:textSize="50sp"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <RatingBar
            android:id="@+id/mood_item_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="5"
            android:gravity="center"
            android:isIndicator="true"
            android:scaleX=".7"
            android:scaleY=".7"
            />

    </LinearLayout>
</LinearLayout>